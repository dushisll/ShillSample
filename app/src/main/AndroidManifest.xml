<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sample.shillsample">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY"/>
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>
    
    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.samsung.android.sdk.multiwindow.enable" android:value="true"/>
        <meta-data android:name="com.samsung.android.sdk.multiwindow.multiinstance.enable" android:value="true"/>
        <meta-data android:name="com.sec.android.multiwindow.STYLE" android:value="fixedRatio"/>

        <meta-data android:name="com.sec.android.support.multiwindow" android:value="true"/>

        <activity android:name=".ui.mine.MyActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.MULTIWINDOW_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize">

        </activity>
        <activity android:name=".ui.CircleProgress.CircleProgressActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".ui.login.LoginActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".ui.waveview.WaveViewActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".ui.databinding.DataBindingActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize">

        </activity>

        <activity android:name=".ui.databinding.MainActivity"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.BaseSampleActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.CustomBindingActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.IncludeBindingActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.CollectionsBindingActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.ResourcesBindingActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.ObservableBindingActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.ViewWithIdBindingActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.ViewStubBindingActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".ui.databinding.DynamicBindingActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize"/>

    </application>

</manifest>